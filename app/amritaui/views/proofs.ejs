<div id="proofs" class="tabs_screen">
  <div class="container">
    <form class="col s12" method="POST" action="/api/proofs/send_request">
      <div class="col s6">
        <div class="card z-depth-4">
          <div class="card-content ">
            <span class="card-title">Proof Request Form</span> <br /><br />
            <div class="row">
              <div class="input-field col s12">
                <select name="their_relationship_did" required>
                  <option value="" disabled selected
                    >Choose The Candidate</option
                  >
                  <%for(let relationship of relationships) {%>
                  <option value="<%=relationship.their_did%>"
                    ><%=relationship.metadata.name%></option
                  >
                  <%}%>
                </select>
                <label>Relationships</label>
              </div>

              <br />
              <br />
              <div class="input-field col s12">
                <select onchange="showDiv(this.value, 'proofRequestsClass')" name="proof_request_id" required>
                  <%for(let pr of Object.keys(proofRequests)) {%>
                  <option value="<%=pr%>"><%=pr%></option>
                  <%}%>
                  <option value="proofRequestOther"
                    >Other (Paste Proof Request Here)</option
                  >
                </select>
                <label>Select Proof Request</label>
              </div>
              <button
                style="background: #2b0045"
                class="btn btn-large waves-effect waves-light"
                type="submit"
                name="action"
              >
                Submit Request <i class="material-icons right">send</i>
              </button>
              <br /><br />
            </div>
          </div>
        </div>
      </div>

      <div class="col s6">
            <%for(let pr of Object.keys(proofRequests)) {%>
                <div id="<%=proofRequests[pr].name%>" class="proofRequestsClass input-field col s12" style="width:100%;display:none;">
                    <textarea class="materialize-textarea" style="width:100%;" rows="20" readonly><%=proofRequests[pr].string%></textarea>
                </div>
            <%}%>
            <div id="proofRequestOther" class="proofRequestsClass input-field col s12" style="width:100%;display:none;">
                <textarea class="materialize-textarea"  placeholder="Paste Proof Request Here" name="manual_entry" style="width:100%;" rows="20"></textarea>
            </div>

      </div>
    </form>
  </div>
</div>
